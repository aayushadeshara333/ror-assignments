<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between align-items-center">
  <h1>Sectors</h1>
  <%= link_to "New sector", new_sector_path, class: "btn btn-primary" %>
</div>
<div id="sectors">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Details</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
      </tr>
    </thead>
    <tbody>
      <% @sectors.each do |sector| %>
        <tr>
          <td><%= sector.name%></td>
          <td><%= link_to "Details", sector, class: "btn btn-success" %></td>
          <td><%= link_to "Edit", edit_sector_path(sector), class: "btn btn-warning" %></td>
          <td><%= button_to "Destroy", sector, method: :delete, data: {confirm: "You sure?"}, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
