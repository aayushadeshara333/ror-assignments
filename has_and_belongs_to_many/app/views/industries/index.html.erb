<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between align-items-center">
  <h1>Industries</h1>
  <%= link_to "New industry", new_industry_path, class: "btn btn-primary" %>
</div>
<div id="industries">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Registration Number</th>
        <th scope="col">Details</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
      </tr>
    </thead>
    <tbody>
      <% @industries.each do |industry| %>
        <tr>
          <td><%= industry.name%></td>
          <td><%= industry.email%></td>
          <td><%= industry.registration_number%></td>
          <td><%= link_to "Details", industry, class: "btn btn-success" %></td>
          <td><%= link_to "Edit", edit_industry_path(industry), class: "btn btn-warning" %></td>
          <td><%= button_to "Destroy", industry, method: :delete, data: {confirm: "You sure?"}, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
