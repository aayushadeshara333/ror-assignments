<%= form_with(model: industry) do |form| %>
  <% if industry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(industry.errors.count, "error") %> prohibited this industry from being saved:</h2>
      <ul>
        <% industry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control w-25" %>
  </div>
  <div class="mb-3">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control w-25" %>
  </div>
  <div class="mb-3">
    <%= form.label :select_sectors, style: "display: block" %>
    <% Sector.all.each do |sector| %>
      <% checked = @industry.sector_ids.include? sector.id%>
      <%= check_box_tag "industry[sector_ids][]", sector.id, checked, class: "form-check-input"%>
      <%= sector.name%>
    <% end %>
  </div>
  <div>
    <%= form.submit class: "btn btn-success"%>
  </div>
<% end %>
