<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :appointment_date, style: "display: block" %>
    <%= form.date_field :appointment_date, required: true %>
  </div>
  <div>
    <%= form.label :patient, style: "display: block" %>
    <%= form.collection_select :patient_id, Patient.all.order(:name), :id, :name,  { prompt: "Select Patient" }, { required: true } %>
  </div>
  <div>
    <%= form.label :physician, style: "display: block" %>
    <%= form.collection_select :physician_id, Physician.all.order(:name), :id, :name,  { prompt: "Select Physician" }, { required: true } %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
